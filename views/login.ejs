<div style="width: 410px;height:470px" class="flex">
    <div  class=" m-auto w-1/12 hover:w-5/12 bg-blue-400 h-full transition-all"> 
        <%- include('menu/menu.ejs') %> 
    </div>
    <div   class="container h-full m-auto w-11/12 bg-contain  bg-white flex bg-[url('https://plexcollectionposters.com/images/2021/05/16/background-images-for-login-page3bc68c53b0db224b.jpg')] bg-no-repeat bg-cover items-center flex-col text-center">
        <div class="mt-28">
            <% if (message) { %>
                <p class="text-xl font-bold text-white"> <%= message %> </p>
             <% } else { %>
                <p class="text-xl font-bold text-white">Login Here !</p>
            <% } %>
            
        </div>
       <form action="/login" method="post" class="w-full pt-2 transition-all px-5">
        
        <div class="my-4 flex">
            <input class="w-full   h-8 pl-10 font-bold focus:border-none focus:outline-none" type="email" name="email"  placeholder="Enter your email!"><i class="fas fa-envelope absolute mt-2 ml-2"></i>
        </div>
        
        
        <div class="my-4 flex">
            <input class="w-full   h-8 pl-10 font-bold focus:border-none focus:outline-none" type="password" name="password"  placeholder="Password!"><i class="fas fa-lock absolute mt-2 ml-2"></i>
        </div>
       
        <div class="my-4">
            <button class="w-full  block bg-pink-900 text-white  h-8 py-1 transition-all uppercase hover:bg-pink-400 hover:text-white  font-bold " type="submit" >Login</button>
        </div>
        <div>
            <ul class="flex justify-center inline-block">
                <li class="mx-2"><a href="" class="inline-block"><i class="fab bg-white hover:bg-gray-200  rounded-full w-7 h-7 fa-facebook text-blue-600 text-xl"></i></a></li>
                <li  class="mx-2"><a href="" class="inline-block"><i class="fab  bg-white  hover:bg-gray-200 rounded-full w-7 h-7 fa-youtube text-red-600 text-xl"></i></a></li>
                <li  class="mx-2"><a href="" class="inline-block"><i class="fas  bg-white hover:bg-gray-200 rounded-full w-7 h-7 fa-envelope text-blue-600 text-xl"></i></a></li>
            </ul>
        </div>
        <a href="/forgetpage" class="font-bold mt-5  text-black block">Forget password?</a>
        <span class="font-bold inline-block text-white">Not a member?</span> <a href="/signup" class="font-bold text-black">SignUp!</a>
       </form>
    </div>
</div>