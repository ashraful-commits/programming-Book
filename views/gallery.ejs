<div style="width: 410px;height:470px" class="flex">
    <div  class=" m-auto w-1/12 hover:w-5/12 bg-blue-400 h-full transition-all"> 
        <%- include('menu/menu.ejs') %> 
    </div>
    <div   class="container h-full m-auto w-11/12 bg-cover  bg-white flex bg-white flex bg-[url('https://plexcollectionposters.com/images/2021/05/16/background-images-for-login-page3bc68c53b0db224b.jpg')]   items-center flex-col text-center">
        <div class="mt-3 flex justify-between">
            <% if (message) { %>
                <p class="text-xl font-bold"> <%= message %> </p>
             <% } else { %>
                <p class="text-xl inline-block mr-20 text-white font-bold">Gallery Photo!</p>
            <% } %>
            
        </div>
       <form action="/gallery" method="post" class="w-full  transition-all px-5" enctype="multipart/form-data">
       
        <div class="flex flex-col relative items-center w-full">
            <label for="photo_view">
                <img class="w-10 h-10 rounded-full mt-2 -top-10 left-60 absolute" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQkpbbWlDXDB8BjZKseFBawLUIE226cAnuTVcq0N42zHKsAu6Gewabc6jwX1Jl3tzkoSlU&usqp=CAU" alt="">
            </label>
            <div class="w-full h-80 flex justify-center items-center flex-wrap overflow-hidden">
               
                   
                     <% user.gallery.forEach(element => { %>
                        <% if (element) { %>
                            <div class="mx-2 my-4 relative">
                            <a href="/images/<%= element %> " class="w-5 h-5 inline-block rounded-full left-14 bg-pink-900 text-white text-sm absolute ">X</a>
                            <img class="w-20 h-20" src="/images/<%= element %> " alt="">
                            </div>
                            <% } else { %>
                             <div class="m-2">
                                <img class="w-20 h-20" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQkpbbWlDXDB8BjZKseFBawLUIE226cAnuTVcq0N42zHKsAu6Gewabc6jwX1Jl3tzkoSlU&usqp=CAU" alt="">
                            </div>
                        <% } %>
                     <% }) %>
                  
               
            </div>
            <input style="display: none;" type="file" name="gallery" id="photo_view" multiple >
        </div>
        <div class="w-full">
            <button type="submit" class="w-full mt-10 py-2 bg-pink-800 hover:bg-blue-800 font-bold text-white">Upload</button>
        </div>
       </form>
    </div>
</div>