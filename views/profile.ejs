<div style="width: 410px;height:470px" class="flex">
    <div  class=" m-auto w-1/12 hover:w-5/12 bg-blue-400 h-full transition-all"> 
        <%- include('menu/menu.ejs') %> 
    </div>
    <div   class="container h-full bg-white flex bg-[url('https://plexcollectionposters.com/images/2021/05/16/background-images-for-login-page3bc68c53b0db224b.jpg')]   m-auto w-11/12 bg-contain  bg-white flex  items-center flex-col text-center">
       <div class="flex bg-white items-center w-full px-5 py-5">
        <% if (user.photo) { %>
            <img class="w-16 h-16 border-4 border-blue-300 rounded-full mr-3" src="/images/<%= user.photo %> " alt="">
            <% } else { %>
                <img class="w-16 h-16 border-4 border-blue-300 rounded-full mr-3" src="https://uybor.uz/borless/uybor/img/user-images/user_no_photo_512x512.png" alt="">

        <% } %>
        <div class="border-l-4 border-l-blue-200 text-left pl-4">
            <% if (user.name) { %>
                <p class="font-bold text-lg text-pink-900"><%= user.name %> </p>
                <% } else { %>
                    <p class="font-bold text-lg text-pink-900"> User name </p>
            <% } %>
            <% if (user.email) { %>
                <p><%= user.email %> </p>
                <% } else { %>
                    <p>example@gmail.com</p>
            <% } %>
          

           <div class="flex">
            
                <a href="/following/<%= user._id %> " class="bg-pink-800 text-sm hover:bg-blue-400 text-white font-bold mr-2 px-2">following <%= user.following.length %> </a>
               
                <a href="/followers/<%= user._id %> " class="bg-pink-800 text-sm hover:bg-blue-400 text-white font-bold px-2">followers <%= user.followers.length %> </a>
             
           </div>
        </div>
       </div>
       <div class=" bg-pink-900 w-full border-b-2 border-b-pink-600">
        <h1 class="text-white font-bold py-1">Gallery Photo</h1>
        
       </div>
       <div class="w-full h-72 flex justify-center items-center flex-wrap overflow-hidden">
        <% user.gallery.forEach(element => { %>
            <% if (element) { %>
                <div class="mx-1 my-2 h-16 w-16">
                <img class="w-16 h-16" src="/images/<%= element %> " alt="">
                </div>
                <% } else { %>
                 <div class="m-2 w-16 h-16">
                    <img class="w-16 h-16" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQkpbbWlDXDB8BjZKseFBawLUIE226cAnuTVcq0N42zHKsAu6Gewabc6jwX1Jl3tzkoSlU&usqp=CAU" alt="">
                </div>
            <% } %>
         <% }) %>
    </div>
    </div>
</div>