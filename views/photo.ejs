<div style="width: 410px;height:470px" class="flex">
    <div  class=" m-auto w-1/12 hover:w-5/12 bg-blue-400 h-full transition-all"> 
        <%- include('menu/menu.ejs') %> 
    </div>
    <div   class="container h-full m-auto w-11/12 bg-contain  bg-[url('https://plexcollectionposters.com/images/2021/05/16/background-images-for-login-page3bc68c53b0db224b.jpg')]   bg-white flex  items-center flex-col text-center">
        <div class="bg-blue-600 w-full border-b-4 border-b-pink-900 text-white">
            <% if (message) { %>
                <p class="text-xl font-bold text-white"> <%= message %> </p>
             <% } else { %>
                <p class="text-xl uppercase font-bold py-2">Profile Photo</p>

            <% } %>
        </div>
       
       <!-- //============================= -->
       <div>
        <form action="/photo" method="post" class="w-full mt-5" enctype="multipart/form-data">
            <div class="flex flex-col relative items-center w-full">
                <label for="photo_view">
                    <img class="w-10 h-10 rounded-full  top-56 left-32 absolute" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQkpbbWlDXDB8BjZKseFBawLUIE226cAnuTVcq0N42zHKsAu6Gewabc6jwX1Jl3tzkoSlU&usqp=CAU" alt="">
                </label>
                <img class="w-72  h-72 preview"  src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6b/Picture_icon_BLACK.svg/1156px-Picture_icon_BLACK.svg.png" alt="">
                <input style="display: none;" type="file" name="photo" id="photo_view">
            </div>
            <div class="w-full">
                <button type="submit" class="w-full py-2 bg-pink-800 hover:bg-blue-800 font-bold text-white">Change</button>
            </div>
        </form>
       </div>
    </div>
</div>